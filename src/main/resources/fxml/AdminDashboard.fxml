<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.controller.AdminDashboardController"
            prefHeight="650.0" prefWidth="900.0" stylesheets="@../css/styles.css">
    
    <VBox spacing="20.0" alignment="TOP_CENTER" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" style="-fx-padding: 20;">
        
        <Label text="Admin Dashboard" styleClass="header-label"/>
        
        <HBox spacing="30" alignment="CENTER">
            <VBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Product Management" style="-fx-font-size: 16px; -fx-text-fill: #a9b7c6; -fx-font-weight: bold;"/>
                <HBox spacing="10">
                    <Button text="Add Product" onAction="#handleAddProduct"/>
                    <Button text="Update Product" onAction="#handleUpdateProduct"/>
                    <Button text="View Products" onAction="#handleViewProducts"/>
                    <Button text="Delete Product" onAction="#handleDeleteProduct"/>
                </HBox>
            </VBox>
            
            <VBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Reports &amp; Alerts" style="-fx-font-size: 16px; -fx-text-fill: #a9b7c6; -fx-font-weight: bold;"/>
                <HBox spacing="10">
                    <Button text="Send Threshold Alert" onAction="#handleSendAlert"/>
                    <Button text="Send Report" onAction="#handleSendReport"/>
                </HBox>
            </VBox>
        </HBox>

        <TableView fx:id="productTable" VBox.vgrow="ALWAYS" prefWidth="850.0">
             <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
             </columnResizePolicy>
        </TableView>
        
        <Button text="Logout" onAction="#logout" style="-fx-background-color: #ff6b6b; -fx-text-fill: white;"/>
    </VBox>
</AnchorPane>
