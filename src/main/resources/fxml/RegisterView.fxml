<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.controller.RegisterController"
            prefHeight="500.0" prefWidth="400.0" stylesheets="@../css/styles.css">

    <VBox spacing="15.0" alignment="CENTER" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <Label text="Create Account" styleClass="header-label"/>

        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <Label text="Username:" style="-fx-text-fill: white;" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="usernameField" promptText="Username" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Email:" style="-fx-text-fill: white;" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="emailField" promptText="Email" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Password:" style="-fx-text-fill: white;" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <PasswordField fx:id="passwordField" promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Role:" style="-fx-text-fill: white;" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <ComboBox fx:id="roleCombo" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="Admin Key:" style="-fx-text-fill: white;" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <PasswordField fx:id="otpField" promptText="Only for Admin" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        </GridPane>

        <HBox spacing="15.0" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
            <Button text="Register" onAction="#handleRegister" defaultButton="true" prefWidth="100"/>
            <Button text="Cancel" onAction="#goToLogin" prefWidth="100"/>
        </HBox>

        <Label fx:id="messageLabel" styleClass="alert-label"/>
        
        <!-- Hidden button for controller reference if needed, or remove if unused -->
        <Button fx:id="cancelButton" visible="false" managed="false"/>
    </VBox>
</AnchorPane>
